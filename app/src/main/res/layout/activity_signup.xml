<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            >
        </LinearLayout>
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/signup_back_btn"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/black"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="12dp"
            ></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:layout_marginLeft="25dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:id="@+id/signup_email"
                    android:background="@drawable/edittext_border"
                    android:hint=" 전송을 눌러 인증번호를 받으세요 "
                    android:inputType="text"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    />
                <Button
                    android:id="@+id/signup_emailsend_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="전송"
                    android:layout_marginRight="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/login_btn_bg"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:id="@+id/signup_authenticationnumber"
                    android:background="@drawable/edittext_border"
                    android:hint=" 전송된 인증번호 입력"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    />
                <Button
                    android:id="@+id/signup_authenticationconfirm_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="확인"
                    android:layout_marginRight="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/login_btn_bg"/>
            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="이름"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/signup_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext_border"
                android:hint="이름"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="닉네임"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/signup_nickname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext_border"
                android:hint=" 특수문자 제외 8자 이내"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="비밀번호"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/signup_password"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext_border"
                android:hint=" 숫자와 영문을 조합하여 8글자 이상"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="비밀번호 확인"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/signup_confirm_pwd"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext_border"
                android:hint=" 비밀번호"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="휴대폰 번호"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/signup_phonenumber"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edittext_border"
                android:hint=" -없이 숫자만 입력"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/signup_btn"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="#ff6565"
                android:text="작성 완료"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

        </LinearLayout>
</LinearLayout>